<% if (emailStatus === '') { %>
	<form action="/reset_password/resetRequest" method="post">
		<input type="text" name="email" id="email" placeholder="Email">
		<br>
		<input type="submit" name="reset" id="reset" value="Send">
	</form>
<% } else { %>
	<form action="/reset_password/change">
		<%- include('partials/reset_password/new_password_form') -%>
		<button type="submit">Reset</button>
	</form>
<% } %>
