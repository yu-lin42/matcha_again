<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('partials/all_pages/header') -%>
	<title><%= title %></title>
</head>
<%- include('partials/all_pages/navbar', {
	loginStatus : loginStatus
}) -%>
<body>
	<script>
		if ('geolocation' in navigator) {
			console.log('geolocation available');
			navigator.geolocation.getCurrentPosition(position => {
				console.log(position);
				const lat = position.coords.latitude;
				const lon = position.coords.longitude;
				// const timestamp = position.timestamp;
				// console.log(position.timestamp);
				const location = { lat, lon };
				const options = {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify(location)
				}
				fetch('/users', options);
			});
		} else {
			console.log('geolocation not available');
		}
	</script>
	<h3>Discover more users near you</h3>
	<!-- <form action=""></form> -->
	<div class="row" style="width: 30%; margin: auto;">
		<%- include('partials/users/users_card') -%>
	</div>
	<script src="/scripts/display_user.js"></script>
</body>
<script src="/scripts/menu.js"></script>
</html>